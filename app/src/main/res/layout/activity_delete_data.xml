<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteData">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_margin="20dp"
      tools:layout_editor_absoluteX="1dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      tools:layout_editor_absoluteY="1dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:fontFamily="@font/comfortaa"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="@string/delete_warn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="This action cannot be undone"
      android:textStyle="bold"
      android:textColor="@color/indian_red"
      android:fontFamily="@font/comfortaa"
      android:textSize="14dp"
      android:layout_marginTop="10dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="Delete account"
      android:background="@color/indian_red"
        android:layout_gravity="center"
      android:id="@+id/delete_account_button"
      android:textColor="@color/white"
        android:layout_marginTop="30dp"
      android:padding="10dp"/>

    <ProgressBar
        android:id="@+id/progressBarDeleteAccount"
        android:layout_marginTop="30dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>